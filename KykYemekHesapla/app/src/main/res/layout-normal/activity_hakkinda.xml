<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hakkinda">


    <TextView
        android:id="@+id/textViewAciklamaBir"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:text="          Uygulama içerisinde sabah kahvaltısı için belirlenen 8 TL, akşam yemeği içinde belirlenen 17 TL, seçilen ürünlerden otomatik olarak düşürülüp, hesaplanmaktadır."
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewAciklamaUc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAciklamaIki"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="39dp"
        android:gravity="center"
        android:text="Lütfen uygulama ile ilgili dilek, şikayet ve önerilerinizi iletişim kısmından iletmeyi unutmayınız."
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAciklamaUc" />

    <TextView
        android:id="@+id/textViewAciklamaUc"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Uygulamada seçilen ürünün iptali için seçtiğiniz ürünün üzerine 1 saniyeliğine basılı tutma eylemini gerçekleştirebilirsiniz. "
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewAciklamaIki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAciklamaBir" />


</androidx.constraintlayout.widget.ConstraintLayout>